      <div style="margin-left: 10%">
        <% abouts.forEach(about => { %>
        <div class="card" style="width: 90%; margin-top: 20px;">
          <div class="card-header" style="font-weight: bold">
            Projects available on the site.
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Phone number: <a style="text-decoration: none" href="tel:<%= about.phoneNumber %>"><%= about.phoneNumber %></a></li>
              <li class="list-group-item">Home address: <%= about.address %></li>
              <li class="list-group-item">Instagram username: <a style="text-decoration: none" target="_blank" href="<%= about.instagram %>"><%= about.instagram %></a></li>
              <li class="list-group-item">Telegram username: <a style="text-decoration: none" target="_blank" href="<%= about.telegram %>"><%= about.telegram %></a></li>
              <li class="list-group-item">GitHub account: <a style="text-decoration: none" target="_blank" href="<%= about.github %>"><%= about.github %></a></li>
              <li class="list-group-item">Gmail account: <a style="text-decoration: none" href="mailto:<%= about.gmail %>"><%= about.gmail %></a></li>
              <li class="list-group-item">Photo: <img style="height: 20px; width: 20px;" alt="Akbar Odilov" src="<%= about.photoLink %>" /></li>
              <li class="list-group-item">Level: <%= about.level %></li>
              <li class="list-group-item" style="height: 250px; overflow-y: scroll">Descriptions: <%= about.descriptions %></li>
            </ul>
          </div>
          <div class="card-footer">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <button type="button" class="btn btn-warning" style="font-weight: bold" data-bs-toggle="modal" data-bs-target="#editModal<%= about._id %>">

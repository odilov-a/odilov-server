      });
    });

    function deleteAbout(aboutId) {
      Swal.fire({
        title: "Are you sure?",
        text: "Are you sure you want to delete this About me?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, of course",
        cancelButtonText: "Cancellation",
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = `/abouts/delete/${aboutId}`;
        }
      });
    }

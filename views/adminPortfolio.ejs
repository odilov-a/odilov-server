<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Projects</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
  <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/8/86/EtruscanA-01.svg/347px-EtruscanA-01.svg.png" type="image/icon type" />
</head>

<body>
  <nav class="navbar bg-body-tertiary bg-light">
    <div class="container">
      <a class="navbar-brand" href="/dashboard" style="font-weight: bold; color: black;  font-size: 24px;">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/86/EtruscanA-01.svg/347px-EtruscanA-01.svg.png" alt="Akbar Odilov" width="10%" height="10%" class="d-inline-block align-text-top">
      </a>
      <a class="navbar-brand" href="/dashboard" style="font-weight: bold; color: red;">
        Back
      </a>
    </div>
  </nav>

  <div class="container">
    <main style="margin-top: 20px">
      <form id="portfolioForm" class="row g-3" action="/portfolios/create" method="post">
        <div class="col-md-6">
          <label for="newTitle" class="form-label" style="font-weight: bold" id="required">Website's name:</label>
          <input type="text" class="form-control" id="newTitle" name="newTitle" required placeholder="Website's name" />
        </div>
        <div class="col-md-6">
          <label for="newLink" class="form-label" style="font-weight: bold" id="required">Website's URL:</label>
          <input type="text" class="form-control" id="newLink" name="newLink" required placeholder="Website's URL" />
        </div>
        <div class="col-md-6">
          <label for="newPhotoLink" class="form-label" style="font-weight: bold" id="required">Input for first photo:</label>
          <input type="text" class="form-control" id="newPhotoLink" name="newPhotoLink" required placeholder="Enter for the first photo's URL" />
        </div>
        <div class="col-md-6">
          <label for="newSecondPhotoLink" class="form-label" style="font-weight: bold">Input for second photo:</label>
          <input type="text" class="form-control" id="newSecondPhotoLink" name="newSecondPhotoLink" placeholder="Enter for the second photo's URL" />
        </div>
        <div class="col-md-6">
          <label for="newRole" class="form-label" style="font-weight: bold" id="required">Role of the developer project:</label>
          <input type="text" class="form-control" id="newRole" name="newRole" required placeholder="Role of the developer project" />
        </div>
        <div class="col-md-6">
          <label for="newTools" class="form-label" style="font-weight: bold" id="required">Technologies used:</label>
          <input type="text" class="form-control" id="newTools" name="newTools" required placeholder="Technologies used" />
        </div>
        <div class="col-md-6">
          <label for="newClient" class="form-label" style="font-weight: bold">Customer's name:</label>
          <input type="text" class="form-control" id="newClient" name="newClient" placeholder="Customer's name" />
        </div>
        <div class="col-md-6">
          <label for="newGithub" class="form-label" style="font-weight: bold" id="required">GitHub URL:</label>
          <input type="text" class="form-control" id="newGithub" name="newGithub" placeholder="GitHub URL" />
        </div>
        <div class="col-md-12">
          <label for="newDescription" class="form-label" style="font-weight: bold">About the project:</label>
          <textarea class="form-control" id="newDescription" name="newDescription" placeholder="About the project"></textarea>
        </div>
        <div class="d-grid gap-2 col-md-6 mx-auto mt-3">
          <button type="submit" class="btn btn-primary" style="font-weight: bold; width: 100%;">
            <svg xmlns="http://www.w3.org/2000/svg" height="19" width="19" style="fill: white;" viewBox="0 0 448 512">
              <path d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zM337 209L209 337c-9.4 9.4-24.6 9.4-33.9 0l-64-64c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l47 47L303 175c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9z" />
            </svg>
            Save
          </button>
        </div>
      </form><br />
      <p class="text-center fs-3" style="font-weight: bold">Projects available on the site.</p>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% portfolios.forEach(portfolio=> { %>
        <div class="col">
          <div class="card">
            <div class="image-container">
              <img src="<%= portfolio.photoLink %>" class="img-thumbnail" alt="<%= portfolio.title %>" width="315" height="315" />
              <% if (portfolio.secondPhotoLink) { %>
              <img src="<%= portfolio.secondPhotoLink %>" class="img-thumbnail" alt="<%= portfolio.title %>" width="315" height="315" />
              <% } %>
            </div>
            <div class="card-body">
              <div class="card-text" style="display: flex; justify-content: space-between">
                <h4 class="card-title">
                  <%= portfolio.title %>
                </h4>
                <h5 class="card-title">
                  <%= new Date(portfolio.createdAt).toLocaleString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                </h5>
              </div>
              <div class="card-text" style="display: flex; justify-content: space-between">
                <h6 class="card-title">
                  <%= portfolio.tools %>
                </h6>
                <h6 class="card-title">
                  <%= portfolio.role %>
                </h6>
              </div>
              <div class="card-text" style="display: flex; justify-content: space-between">
                <h6 class="card-title">
                  <a target="_blank" href="<%= portfolio.link %>" style="text-decoration:none"><%= portfolio.link %></a>
                </h6>
                <h6 class="card-title">
                  <%= portfolio.client %>
                </h6>
              </div>
              <h6 class="card-title">
                <a target="_blank" href="<%= portfolio.github %>" style="text-decoration:none"><%= portfolio.github %></a>
              </h6>
              <p class="card-text" style="height: 100px; overflow-y: scroll">
                <%= portfolio.description %>
              </p>
            </div>
            <div class="card-footer">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                  <button type="button" class="btn btn-warning" style="font-weight: bold" data-bs-toggle="modal" data-bs-target="#editModal<%= portfolio._id %>">
                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512">
                      <path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z" />
                    </svg>
                  </button>
                  <button type="button" class="btn btn-danger" style="font-weight: bold" onclick="deletePortfolio('<%= portfolio._id %>')">
                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" style="fill: white;" viewBox="0 0 448 512">
                      <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
                    </svg>
                  </button>
                </div>
              </div>
          </div>
        </div>
        <% }); %>
      </div>
      <br />
      <% portfolios.forEach(portfolio=> { %>
      <div class="modal fade" id="editModal<%= portfolio._id %>" tabindex="-1" aria-labelledby="editModalLabel<%= portfolio._id %>" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editModalLabel<%= portfolio._id %>" style="font-weight: bold">
                Update the project
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div style="padding: 2%;">
              <form class="row g-3" action="/portfolios/update/<%= portfolio._id %>" method="post">
                <div class="col-md-6">
                  <label for="updatedTitle" class="form-label" style="font-weight: bold" id="required">Update the website's name:</label>
                  <input type="text" class="form-control" id="updatedTitle" name="updatedTitle" placeholder="Update the website's name" value="<%= portfolio.title %>" required />
                </div>
                <div class="col-md-6">
                  <label for="updatedLink" class="form-label" style="font-weight: bold" id="required">Update the website's URL:</label>
                  <input type="text" class="form-control" id="updatedLink" name="updatedLink" placeholder="Update the website's URL" value="<%= portfolio.link %>" required />
                </div>
                <div class="col-md-6">
                  <label for="updatedPhotoLink" class="form-label" style="font-weight: bold" id="required">Update the first photo:</label>
                  <input type="text" class="form-control" id="updatedPhotoLink" name="updatedPhotoLink" placeholder="Update the first photo" value="<%= portfolio.photoLink %>" required />
                </div>
                <div class="col-md-6">
                  <label for="updatedSecondPhotoLink" class="form-label" style="font-weight: bold">Update the second photo:</label>
                  <input type="text" class="form-control" id="updatedSecondPhotoLink" name="updatedSecondPhotoLink" placeholder="Update the second photo" value="<%= portfolio.secondPhotoLink %>" />
                </div>
                <div class="col-md-6">
                  <label for="updatedRole" class="form-label" style="font-weight: bold" id="required">Update the developer project role:</label>
                  <input type="text" class="form-control" id="updatedRole" name="updatedRole" placeholder="Update the developer project role" value="<%= portfolio.role %>" required />
                </div>
                <div class="col-md-6">
                  <label for="updatedTools" class="form-label" style="font-weight: bold" id="required">Used update technologies:</label>
                  <input type="text" class="form-control" id="updatedTools" name="updatedTools" placeholder="Used update technologies" value="<%= portfolio.tools %>" required />
                </div>
                <div class="col-md-6">
                  <label for="updatedClient" class="form-label" style="font-weight: bold">Update the customer's name:</label>
                  <input type="text" class="form-control" id="updatedClient" name="updatedClient" placeholder="Update the customer's name" value="<%= portfolio.client %>" />
                </div>
                <div class="col-md-6">
                  <label for="updatedGithub" class="form-label" style="font-weight: bold" id="required">Update GitHub URL:</label>
                  <input type="text" class="form-control" id="updatedGithub" name="updatedGithub" placeholder="Update GitHub URL" value="<%= portfolio.github %>" required />
                </div>
                <div class="col-md-6">
                  <label for="updatedDescription" class="form-label" style="font-weight: bold">Update the about:</label>
                  <textarea class="form-control" id="updatedDescription" name="updatedDescription" placeholder="Update the about"><%= portfolio.description %></textarea>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary" style="font-weight: bold">
                    <svg xmlns="http://www.w3.org/2000/svg" height="19" width="19" style="fill: white;" viewBox="0 0 448 512">
                      <path d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zM337 209L209 337c-9.4 9.4-24.6 9.4-33.9 0l-64-64c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l47 47L303 175c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9z" />
                    </svg>
                    Save
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function deletePortfolio(portfolioId) {
      Swal.fire({
        title: "Are you sure?",
        text: "Are you sure you want to delete this project?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, of course",
        cancelButtonText: "Cancellation",
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = `/portfolios/delete/${portfolioId}`;
        }
      });
    }
  </script>
</body>
<style>
  #required:after {
    content: " *";
    color: red;
  }
</style>

</html>